<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.thaddeus.followme.ConfigActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editServer" />

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Server name"
        android:layout_alignBottom="@+id/editServer"
        android:layout_toRightOf="@+id/editServer"
        android:layout_toEndOf="@+id/editServer"
        android:layout_marginLeft="10dp" />
 
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editPeriod"
        android:layout_below="@+id/editServer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Send period in minutes"
        android:id="@+id/textPeriod"
        android:layout_alignBottom="@+id/editPeriod"
        android:layout_toRightOf="@+id/editPeriod"
        android:layout_toEndOf="@+id/editPeriod"
        android:layout_marginLeft="10dp" />
 
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send data now"
        android:id="@+id/sendButton"
        android:layout_below="@+id/editPeriod"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/textPeriod"
        android:layout_toLeftOf="@+id/textPeriod"
        android:layout_marginTop="25dp" />
        
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startButton"
        android:layout_below="@+id/sendButton"
        android:layout_marginTop="25dp" />
    
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopButton"
        android:layout_alignTop="@+id/startButton"
        android:layout_alignRight="@+id/sendButton" />
    
</RelativeLayout>
